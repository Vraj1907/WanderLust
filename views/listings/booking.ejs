<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="mb-4">Create your Booking</h3>
      <form method="POST" action="/listings/<%= listing.id %>/booking" class="card p-4 shadow-sm">
        <div class="mb-3">
          <label for="user" class="form-label">Your Name</label>
          <input type="text" id="user" name="user" class="form-control" value="" required>
        </div>
        <div class="mb-3">
          <label for="date" class="form-label">Booking Date</label>
          <input type="date" id="date" name="date" class="form-control" value="" required>
        </div>
        <button type="submit" class="btn btn-dark w-100">Book</button>
      </form>
    </div>
  </div>
</div>